# Base URL of the application (frontend)
# Example: http://localhost:5173
APP_BASE_URL=
# Port of the application
PORT=

# MongoDB connection string for the database
MONGODB_URI=

# Base64 encoded API key for ImageKit (used for image uploads)
# Get the API key at https://imagekit.io/
IMAGEKIT_API_KEY_BASE64=

# SMTP configuration for sending emails
SMTP_HOST=           # SMTP server host
SMTP_PORT=           # SMTP server port
SMTP_USERNAME=       # SMTP username (email address)
SMTP_PASSWORD=       # SMTP password
SMTP_FROM=           # Default "from" email address
